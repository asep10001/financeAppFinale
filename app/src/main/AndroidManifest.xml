<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.kotlin.financeapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_myney"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_myney_round"
        android:supportsRtl="true"
        android:theme="@style/SplashScreen">
        <activity android:name=".Activities.ShowAllInputActivity"></activity>
        <activity android:name=".Activities.ExpensesActivity" />
        <activity android:name=".Activities.DetailCategoryActivity" />
        <activity android:name=".CategoryInputActivity" />
        <activity android:name=".InputActivity" />
        <activity android:name=".Activities.IncomeActivity" />
        <activity android:name=".SplashScreen" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>