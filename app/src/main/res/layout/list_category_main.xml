<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="170dp"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="20dp"
    android:id="@+id/cardCategory"
    android:layout_marginHorizontal="5dp"
    android:backgroundTint="#002AFF"
    android:layout_marginVertical="5dp"
    app:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:padding="10dp"

        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">
            <ImageView
                android:id="@+id/textCategoryImage"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:src="@drawable/ic_account"/>

            <TextView
                android:id="@+id/textCategoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="10sp"
                android:textSize="25dp"
                android:gravity="center"
                android:text="Transaction Name : "
                android:textColor="#000" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/btnHapusCategory"
                android:layout_width="match_parent"
                android:layout_height="30sp"
                android:layout_weight="1"
                android:src="@drawable/ic_delete_forever_red_24dp" />


            <ImageView
                android:id="@+id/btnEditCategory"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="30sp"
                android:src="@drawable/ic_mode_edit_orange_24dp" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
